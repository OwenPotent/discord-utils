{
    "compilerOptions": {
        "target": "ES6",
        "strict": true,
        "declaration": true,
        "module": "CommonJS",
        "outDir": "./dist",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "allowJs": true,
    },
    "exclude": [
        "node_modules"
    ],
    "include": ["src"]
}